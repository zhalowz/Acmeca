<% content_for :head do %>
<%= javascript_include_tag "jquery-1.7.1.min.js" %>
<%= javascript_include_tag "raphael-min.js" %>
<%= javascript_include_tag "jquery.easing.js" %>
<%= javascript_include_tag "iview.js" %>
 <script>
$(document).ready(function(){
	$('#iview').iView({
	pauseTime: 4000,
	directionNav: false,
	controlNav: true,
	tooltipY: -15
	});
});
</script>
<% end %>

<h1>Service & Maintenance</h1>
<br/>
<div class="col-1 col-indent">
  <div class="box">
    <h3>Menu</h3>
    <ul class="nostyle categories">
      <li><%= link_to "Rental", rentals_path %></li>
      <li><%= link_to "Sales/Purchase", sales_path %></li>
      <li><%= link_to "Service & Maintenance", services_path %></li>
      <li><%= link_to "Warranty", pages_warranty_path %></li><br/>
    </ul>
  </div>
  <div class="col-1">
    <div class="container">
		    <div id="iview">
			<div data-iview:image="../assets/Service1.jpg" data-iview:transition="slice-top-fade,slice-right-fade">					
			</div>
			<div data-iview:image="../assets/Service2.jpg" data-iview:transition="zigzag-drop-top,zigzag-drop-bottom" data-iview:pausetime="3000">								
			</div>
			<div data-iview:image="../assets/Service3.jpg">	    
			</div>
                    </div>
    </div>
  </div>
<div class="col-2">
  <% for service in @service %> 
    <strong><h3><%= service.header %></h3></strong>
    <br/>
    <div class="prod_description">
      <p><%= sanitize(redcloth(service.description)) %></p><br/>
    </div>
  <% end %>
</div>
