<% content_for :head do %>
<%= javascript_include_tag 'jquery-1.10.2.min' %>
  <script> 
    $(function(){
    $('.fadein img:gt(0)').hide();
    setInterval(function(){
      $('.fadein :first-child').fadeOut()
         .next('img').fadeIn()
         .end().appendTo('.fadein');}, 
      3000);
});
  </script>
<% end %>

<h1>Rentals</h1>
<br/>
<div class="col-1 col-indent">
  <div class="box">
    <h3>Menu</h3>
    <ul class="nostyle categories">
      <li><%= link_to "Rental", rentals_path %></li>
      <li><%= link_to "Sales/Purchase", sales_path %></li>
      <li><%= link_to "Service & Maintenance", services_path %></li>
      <li><%= link_to "Warranty", pages_warranty_path %></li><br/>
    </ul>
</div>
<div class="col-2">
    <div id="main1" class="fadein">
      <img src="/assets/Rent1.jpg">
      <img src="/assets/Rent2.jpg">
      <img src="/assets/Rent3.jpg">
      <img src="/assets/Rent4.jpg">
      <img src="/assets/Rent5.jpg">
      <img src="/assets/Rent6.jpg">
      <img src="/assets/Rent7.jpg">
      <img src="/assets/Rent8.jpg">
      <img src="/assets/Rent9.jpg">
      <img src="/assets/Rent10.jpg">
      <img src="/assets/Rent11.jpg">
      <img src="/assets/Rent12.jpg">
      <img src="/assets/Rent13.jpg">
    </div>
  </div>
</div>
<div class="col-2">
<% for rental in @rentals %> 
  <h3><strong><%= rental.header %></strong></h3>
<br/>
  <div class="prod_description">
   <p><%= sanitize(redcloth(rental.description)) %></p><br/>
   </div>
<% end %>
</div>
