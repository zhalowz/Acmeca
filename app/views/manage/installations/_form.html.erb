<%= form_for(@installation) do |f| %>
  <% if @installation.errors.any? %>
    <div class="error">
      <h2><%= pluralize(@installation.errors.count, "error") %> prohibited this installation from being saved:</h2>

      <ul>
      <% @installation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

<div class="album_photos">
  <%= render :partial => 'installation_iphoto', :collection => @installation.iphotos %>
</div>
<div id="photos">
  <% if @installation.new_record? %>
    <%= render :partial => 'iphoto', :locals => { :form => f, :iphoto => @installation.iphotos.build } %>
  <% end %>
</div>
<%= add_object_link("New Photo", f, @installation.iphotos.build, "iphoto", "iphotos") %>
    
<p><%= f.submit %></p>
  </div>
<% end %>
