<h1><%= @product.name %></h1>
<% @category = Category.find_by_id(@product.category_id) %>
<%= link_to @category.name, manage_category_path(@category) %>
<div class="product_details">
  <%= image_tag @product.photo.url(:large) %>
  <div class="prod_description">
    <%= sanitize(redcloth(@product.description)) %>
  </div>
</div>
<div class="actions">
  <%= link_to "Edit", edit_manage_product_path(@product) %>
  <%= link_to "Destroy", manage_product_path(@product), :confirm => "Are you sure?", :method => :delete %>
</div>
<%= link_to 'Back to Products', manage_products_path %> 
