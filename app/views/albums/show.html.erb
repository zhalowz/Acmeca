<fieldset>
<legend>Gallery</legend>

<% for album in @album %>

<p>
  <strong>Name:</strong><%= album.name %>
</p>
<% for photo in album.photos %>
  <%= image_tag photo.data.url, :alt => "" %>
<% end %>
<p>
  <%= link_to "Edit", edit_album_path(album) %> |
  <%= link_to "Delete", album, :confirm => 'Are you sure?', :method => :delete %>
</p>
<% end %>
</fieldset>


