<div class="col-1 col-indent">
  <div class="box">
    <h3>Categories</h3>
    <ul class="nostyle categories">
      <li><%= link_to "All", albums_path %></li>
      <% for gcategory in @gcategories %>
        <li>
        <%= link_to gcategory.name, gcategory %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= will_paginate @albums %>
<div class="catalog1">
<% for album in @albums %>
  <div class="catalog1-item">
    <%= link_to get_first_image(album, :small), album  %>
    <%= link_to album.name, album %>
  </div>
<% end %>
</div>
