<% content_for :head do %>
  <script> 
    setInterval(function(){
      var imgs = $$('.fadein img'), 
      visible = imgs.findAll(function(img){ return img.visible(); });
      if(visible.length>1) visible.last().fade({ duration: .3 });
      else imgs.last().appear({ duration: .3, 
        afterFinish: function(){ imgs.slice(0,imgs.length-1).invoke('show');  } });
    }, 3000);
    {
      main1 = new Image(654,354);
      main1.src = "/images/header.jpg";
      product1 = new Image(654,354);
      product1.src = "/images/header.jpg";
      service1 = new Image(654,354);
      service1.src = "/images/header1.jpg";
      installation1 = new Image(654,354);
      installation1.src = "/images/header2.jpg";
    }

    function hiLite(img, imgObjName, comment) {
      {
        document.images[img].src = eval(imgObjName + ".src");
        window.status = comment;
        return true;
      }
    }
  </script> 
<% end %>
