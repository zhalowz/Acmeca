<div class="contacts-right">
  <%= form_tag :action => "send_mail" do %>      
    <fieldset>
      <legend>Enquiry Form</legend>

      <p>
      <%= label :email, :name, "Name:", { :class => "required" } %><br />
      <%= text_field :email, :name, { :class => "title" }%>
      </p>

      <p>
      <%= label :email, :contact, "Contact:" %><br />
      <%= text_field :email, :contact, { :class => "text" } %>
      </p>

      <p>
      <%= label :email, :address, "Email:", { :class => "required" } %><br />
      <%= text_field :email, :address, { :class => "text" } %>
      </p>

      <p>
      <%= label :email, :subject, "Subject:", { :class => "required" } %><br />
      <%= text_field :email, :subject, { :class => "text" } %>
      </p>

      <p>
      <%= label :email, :body, "Message:", { :class => "required" } %><br />
      <%= text_area :email, :body, :rows => 8, :cols=> 20 %>
      </p>

      <p class="actions"><%= submit_tag "Send"%></p>
    </fieldset>
  <% end %>
</div>
